<odoo>
	<data>
		<record id="view_adhimix_mrp_kesiapan_alat_wizard" model="ir.ui.view">
			<field name="name">adhimix.mrp.kesiapan.alat.wizard</field>
			<field name="model">kesiapan.alat.wizard</field>
			<field name="type">form</field>
			<field name="priority" eval="8"/>
			<field name="arch" type="xml">
				<form string="Kesiapan Alat Dan Bahan">
		            <group>
		                <field name="start_date"/>
		                <field name="end_date"/>
		                <!-- <field name="tanggal"/> -->
		            </group>
		            <footer>
		                <button name="generate_report" string="Print" type="object" class="btn-primary"/>
		                <button string="Cancel" class="btn-default" special="cancel"/>
		            </footer>
		        </form>
		    </field>
		</record> 
		<record id="action_view_adh_mrp_kesiapan_alat_wizard" model="ir.actions.act_window">
			<field name="name">Kesiapan Alat Dan Bahan</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">kesiapan.alat.wizard</field>
			<field name="view_type">form</field>
			<field name="view_mode">form</field>
			<field name="view_id" ref="view_adhimix_mrp_kesiapan_alat_wizard"/>
			<field name="target">new</field>
	    </record>
	     <report
			id="report_kesiapan_alat_menu"
			string="Kesiapan Alat Dan Bahan"
			model="adhimix.mrp.instalasi"
			report_type="qweb-pdf"
			file="adhimix.mrp.instalasi"
			name="adh_mrp_instalasi.report_kesiapan_alat"
		/>
		<template id="report_kesiapan_alat">
			<t t-call="report.html_container">				
				<t t-call="report.internal_layout">
					<div class="page">
						<table class="table table-bordered">
							<tbody>
								<tr>
									<td rowspan="2" class="img-responsive" style="border-top:2px solid black;border-left:2px solid black;border-bottom:2px solid black;border-right:2px solid black;">
										<img t-if="company_id" t-att-src="'data:image/png;base64,%s' %company_id" style="text-align:center; max-height:80px;width:100;"/>
									</td>
									<td colspan="7" rowspan="2" style="border-top:2px solid black;border-left:2px solid black;border-bottom:2px solid black;border-right:2px solid black;vertical-align:middle;">
										<center><strong>FORM <br/>CHECKLIST KESIAPAN ALAT DAN BAHAN <br/> INSTALL PRODUK</strong></center>
									</td>
									<td style="border-top:2px solid black;border-left:2px solid black;border-bottom:2px solid black;border-right:2px solid black;">
										<center><strong>No. Dokumen :</strong></center>
									</td>
								</tr>
								<tr>
									<td style="border-top:2px solid black;border-left:2px solid black;border-bottom:2px solid black;border-right:2px solid black; vertical-align:middle;">
										<center></center>
									</td>
								</tr>
								<tr>
									<td style="border-top:2px solid black;border-left:2px solid black;border-bottom:2px solid black;border-right:2px solid black;">
										<center><strong>Revisi :</strong> </center>
									</td>
									<td colspan="7" style="border-top:2px solid black;border-left:2px solid black;border-bottom:2px solid black;border-right:2px solid black;">
										<center><strong>Tanggal Efektif :<t t-esc="tanggal_efektif"/></strong></center>
									</td>
									<td style="border-top:2px solid black;border-left:2px solid black;border-bottom:2px solid black;border-right:2px solid black;">
										<center><strong>Hal : </strong> </center>
									</td>
								</tr>
							</tbody>
						</table>
						<table class="table table-bordered">
							<thead>
								<tr>
									<td rowspan="2" style="vertical-align:middle;border-top:2 solid black;border-left:2px solid black;border-bottom:2px solid black;border-right:1px solid black;">
