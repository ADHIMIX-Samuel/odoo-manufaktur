<odoo>
	<data>
		<record id="view_adhimix_mrp_info_pasar_report2" model="ir.ui.view">
			<field name="name">adhimix.mrp.info.pasar.wizard2</field>
			<field name="model">info.pasar.wizard2</field>
			<field name="type">form</field>
			<field name="priority" eval="8"/>
			<field name="arch" type="xml">
				<form string="Info Pasar">
		            <group>
		                <!-- <field name="tanggal_informasi"/> -->
		            </group>
		            <footer>
		                <button name="generate_report" string="Print" type="object" class="btn-primary"/>
		                <button string="Cancel" class="btn-default" special="cancel"/>
		            </footer>
		        </form>
		    </field>
		</record> 
		<record id="action_view_adh_mrp_info_pasar_wizard" model="ir.actions.act_window">
			<field name="name">Print</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">info.pasar.wizard2</field>
			<field name="view_type">form</field>
			<field name="view_mode">form</field>
			<field name="view_id" ref="view_adhimix_mrp_info_pasar_report2"/>
			<field name="target">new</field>
	    </record>
	    <report
			id="report_info_pasar_menu"
			string="Info Pasar"
			model="adhimix.mrp.info.pasar"
			report_type="qweb-pdf"
			file="adhimix.mrp.info.pasar"
			name="adh_mrp_pemasaran.info_pasar_report"
		/>
		<template id="info_pasar_report">
			<t t-call="report.html_container">
				<t t-foreach="docs" t-as="doc">
					<t t-call="adh_mrp_pemasaran.info_pasar_report_document"/>
				</t>
			</t>
		</template>
		<template id="info_pasar_report_document">
			<!-- <t t-call="report.external_layout"> -->
				<!-- <t t-set="doc" t-value="doc.with_context(
					{'lang':doc.partner_id.lang})"/> -->
				<div class="page">
					<table class="table table-bordered">
						<thead>
							<tr>
								<th rowspan="2"></th>
								<th rowspan="2"><center>FORM <br/>DAFTAR INFORMASI &#38; TARGET PASAR</center></th>
								<th><center>No.Dokumen</center></th>
							</tr>
							<tr>
								<!-- <th><center><span t-field="doc.name"/></center></th> -->
							</tr>
							<tr>
								<th><center>Revisi :</center></th>
								<th><center>Tanggal Efektif</center></th>
								<th><center>Hal :</center></th>
							</tr>
						</thead>
					</table>
					<table class="table table-bordered">
						<thead>
							<tr>
								<th rowspan="2"><center>NO</center></th>
								<th rowspan="2">
									<center>Tanggal Informasi Pasar</center></th>
								<th rowspan="2"><center>Nama Pelanggan</center></th>
								<th rowspan="2"><center>Nama/Spesifikasi Produk</center></th>
								<th rowspan="2"><center>Volume(Buah)</center></th>
								<th rowspan="2"><center>Tanggal Dibutuhkan</center></th>
								<th rowspan="2"><center>Lokasi</center></th>
								<th colspan="2"><center>Sumber Informasi</center></th>
								<th colspan="2"><center>Contact Person</center></th>
								<th rowspan="2"><center>Status</center></th>
								<th colspan="3"><center>Target Pasar</center></th>
							</tr>
							<tr>
								<th><center>Dari</center></th>
								<th><center>Cara</center></th>
								<th><center>Nama</center></th>
								<th><center>Telepon</center></th>
								<th><center>Tanggal</center></th>
								<th><center>Ya</center></th>
								<th><center>Tidak</center></th>
							</tr>
							<tbody>
								<!-- <tr t-foreach="doc.info_pasar_id" t-as="l"> -->
								<tr>
									<td><span t-field="doc.name"/></td>
									<td><span t-field="doc.tanggal_informasi" /></td>
									<td><span t-field="doc.nama_pelanggan"/></td>
									<td><span t-field="doc.nama_spesifikasi_produk"/></td>
									<td><span t-field="doc.tanggal_dibutuhkan"/></td>
									<td><span t-field="doc.lokasi"/></td>
									<td><span t-field="doc.status"/></td>
									<td><span t-field="doc.sumber_informasi_dari"/></td>
									<td><span t-field="doc.sumber_informasi_cara" /></td>
									<td><span t-field="doc.nama"/></td>
									<td><span t-field="doc.telepon"/></td>
									<td><span t-field="doc.status"/></td>
									<td><span t-field="doc.tanggal"/></td>
									<td><span t-field="doc.ya"/></td>
									<td><span t-field="doc.tidak"/></td>
								</tr>
							</tbody>							
						</thead>
					</table>
				</div>
			<!-- </t> -->
		</template>	
	    <menuitem id="menu_mrp_info_pasar_wizard"
		            name="Info Pasar"
		            action="action_view_adh_mrp_info_pasar_wizard"
		            parent="sales_team.menu_sale_report"
		            sequence="10"/>

	</data>
</odoo>