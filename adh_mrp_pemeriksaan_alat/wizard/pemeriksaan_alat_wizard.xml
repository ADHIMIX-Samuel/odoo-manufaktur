	<data>
		<record id="view_adhimix_mrp_pemeriksaan_alat_wizard" model="ir.ui.view">
			<field name="name">adhimix.mrp.pemeriksaan.alat.wizard</field>
			<field name="model">pemeriksaan.alat.wizard</field>
			<field name="type">form</field>
			<field name="priority" eval="8"/>
			<field name="arch" type="xml">
				<form string="Pemeriksaan Keruksakan Alat">
		            <group>
		                <field name="tanggal_masuk_alat"/>
		                <!-- <field name="start_date"/>
		                <field name="end_date"/> -->
		            </group>
		            <footer>
		                <button name="generate_report" string="Print" type="object" class="btn-primary"/>
		                <button string="Cancel" class="btn-default" special="cancel"/>
		            </footer>
		        </form>
		    </field>
		</record> 
		<record id="action_view_adh_mrp_pemeriksaan_alat_wizard" model="ir.actions.act_window">
			<field name="name">Pemeriksaan Kerusakan Alat</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">pemeriksaan.alat.wizard</field>
			<field name="view_type">form</field>
			<field name="view_mode">form</field>
			<field name="view_id" ref="view_adhimix_mrp_pemeriksaan_alat_wizard"/>
			<field name="target">new</field>
	    </record>
